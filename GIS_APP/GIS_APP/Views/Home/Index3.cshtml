    function CalculaDistancia(p1, p2) {
        var _a = 'Norte/Sul';
        var _b = 'Leste/Oeste';
        var _c = 'Nordeste/Sudeste/Noroeste/Sudoeste';

        var ca = p1.lat - p2.lat;
        var co = p1.lng - p2.lng;
        //console.log(ca);
        //console.log(co);
        _a = ca < 0 ? 'Norte' : 'Sul';
        _b = co < 0 ? 'Leste' : 'Oeste';
        if (ca < 0 && co < 0)
            _c = 'Nordeste';
        else if (ca < 0)
            _c = 'Noroeste';
        else if (co < 0)
            _c = 'Sudeste';
        else
            _c = 'Sudoeste';
        $('#direcoes').html(_a + ", " + _b + ' (' + _c + ')');

        ca = ca < 0 ? ca * -1 : ca;
        co = co < 0 ? co * -1 : co;

        var hip = Math.pow(ca, 2) + Math.pow(co, 2);
        hip = hip < 0 ? hip * -1 : hip;
        hip = Math.sqrt(hip);

        //console.log('ca: ' + ca + ', co: ' + co + ', hip: ' + hip);
        //var m = grau_mtr(hip);
        //console.log(m);
        addPolyline(p1, p2);
        //addPolyline(p2, { lat: p1.lat, lng: p2.lng });
